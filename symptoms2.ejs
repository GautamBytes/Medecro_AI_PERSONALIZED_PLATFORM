<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Basic Detail Form</title>
    <link rel="icon" href="/images/favicon.png" type="image/png">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-image: url('/images/medical1.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .navbar {
            background-color: #d4f7b0;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            display: flex;
            justify-content: space-evenly;
            padding: 20px 0px;
            font-size: xx-large;
            z-index: 3;
        }

        nav a {
            text-decoration: none;
            font-size: 30px;
            color: black;
        }

        nav a:hover {
            color: rgb(128, 109, 146);
        }

        .container {
            font-family: quicksand;
            font-size: 20px;
            color: white;
            max-width: 500px;
            margin: auto;
            margin-top: 35px;
            background: transparent;
            padding: 70px;
            padding-top: 10px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            /* For Safari */
        }

        .quicksand {
            font-family: "Quicksand", sans-serif;
            font-optical-sizing: auto;
            font-style: normal;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            margin-top: 10px;
            display: block;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="number"],
        textarea,
        select {
            font-size: 18px;
            font-weight: 600;
            font-family: quicksand;
            width: 100%;
            padding: 10px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        input[type="submit"],
        .back-button {
            width: 100px;
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        input[type="submit"]:hover {
            background-color: #45a049;
        }

        .back-button {
            background-color: #ccc;
            color: #333;
            margin-right: 10px;
        }

        .back-button:hover {
            background-color: #bbb;
        }

        .buttons {
            display: flex;
            justify-content: space-between;
        }

        .report-issue {
            text-align: center;
            margin-top: 15px;
            font-size: 14px;
        }

        .report-issue a {
            color: #ff1919;
            font-size: larger;
            font-weight: 700;
            text-decoration: none;
        }

        .report-issue a:hover {
            text-decoration: underline;
        }

        .image-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .image-container img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
        }
    </style>
</head>

<body>

    <nav class="navbar quicksand">
        <span style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Talaash Symptom Checker</span>
        <a href="/">Home</a>
        <a href="/about">About us</a>

    </nav>

    <div class="container">


        <h2>Basic Details</h2>
        <form action="/submit" method="post">
            <label for="name">Full Name:</label>
            <input type="text" id="name" name="name" required>

            <label for="age">Age:</label>
            <input type="number" id="age" name="age" required min="1" max="100">

            <label for="country">Country:</label>
            <select id="country" name="country" required>
                <option value="" disabled selected>Select your Country</option>
                <option value="United States">United States</option>
                <option value="United Kingdom">United Kingdom</option>
                <option value="Canada">Canada</option>
                <option value="India">India</option>
                <option value="Australia">Australia</option>
                <option value="Russia">Russia</option>
                <option value="Germany">Germany</option>
                <option value="France">France</option>
                <option value="China">China</option>
                <option value="Japan">Japan</option>
            </select>

            <label for="symptom-area">Symptom Area:</label>
            <select id="symptom-area" name="symptom-area" required>
                <option value="" disabled selected>Select your Area</option>
                <option value="head">Head</option>
                <option value="chest">Chest</option>
                <option value="abdomen">Abdomen</option>
                <option value="legs">Legs</option>
                <option value="arms">Arms</option>
                <option value="heart">Heart</option>
            </select>

            <label for="symptoms">Select Symptoms:</label>
            <select id="symptoms" name="symptoms" multiple required>
                <option value="" disabled selected>Select symptoms related to the selected area</option>
            </select>

            <div class="buttons">
                <button type="button" class="back-button" onclick="window.history.back()">Back</button>
                <input type="submit" value="Next">
            </div>
        </form>
        <div class="report-issue">
            <a href="#">Report an issue with this question</a>
        </div>
    </div>

    <script>
        const symptomsData = {
            head: [
                { value: "Headache", text: "Headache" },
                { value: "Dizziness", text: "Dizziness" },
                { value: "Nausea", text: "Nausea" },
                { value: "Vision problems", text: "Vision problems" }
            ],
            chest: [
                { value: "Chest pain", text: "Chest pain" },
                { value: "Shortness of breath", text: "Shortness of breath" },
                { value: "Cough", text: "Cough" },
                { value: "Palpitations", text: "Palpitations" }
            ],
            abdomen: [
                { value: "Abdominal pain", text: "Abdominal pain" },
                { value: "Nausea", text: "Nausea" },
                { value: "Vomiting", text: "Vomiting" },
                { value: "Diarrhea", text: "Diarrhea" }
            ],
            legs: [
                { value: "Leg pain", text: "Leg pain" },
                { value: "Itching", text: "Itching" },
                { value: "Swelling", text: "Swelling" },
                { value: "Cramps", text: "Cramps" },
                { value: "Numbness", text: "Numbness" }
            ],
            arms: [
                { value: "Arm pain", text: "Arm pain" },
                { value: "Weakness", text: "Weakness" },
                { value: "Numbness", text: "Numbness" },
                { value: "Swelling", text: "Swelling" }
            ],
            heart: [
                { value: "Chest pain", text: "Chest pain" },
                { value: "Shortness of breath", text: "Shortness of breath" },
                { value: "Palpitations", text: "Palpitations" },
                { value: "Fatigue", text: "Fatigue" }
            ]
        };

        document.getElementById('symptom-area').addEventListener('change', function () {
            const area = this.value;
            const symptomsSelect = document.getElementById('symptoms');

            // Clear previous options
            symptomsSelect.innerHTML = '<option value="" disabled>Select symptoms related to the selected area</option>';

            // Populate new options based on selected area
            if (symptomsData[area]) {
                symptomsData[area].forEach(symptom => {
                    const option = document.createElement('option');
                    option.value = symptom.value;
                    option.text = symptom.text;
                    symptomsSelect.appendChild(option);
                });
            }
            form.action = `/${area}`;
        });
    </script>

</body>

</html>