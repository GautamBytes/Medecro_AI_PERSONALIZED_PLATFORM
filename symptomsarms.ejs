    <script>
        function showQuestion(questionNumber) {
            // Hide all questions
            const questions = document.querySelectorAll('.question');
            questions.forEach(q => q.classList.remove('active'));

            // Show the current question
            const currentQuestion = document.getElementById(`question${questionNumber}`);
            if (currentQuestion) {
                currentQuestion.classList.add('active');
            }
        }

        function nextQuestion(currentNumber) {
            showQuestion(currentNumber + 1);
        }

        function prevQuestion(currentNumber) {
            showQuestion(currentNumber - 1);
        }

        // Initialize the form to show the first question
        showQuestion(1);
    </script>

